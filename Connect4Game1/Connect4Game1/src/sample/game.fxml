<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="rootGridPane" style="-fx-background-color: #D9F7F0;" xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.internshala.game.Controller">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints maxWidth="313.0" minWidth="221.0" prefWidth="221.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="35.0" minHeight="10.0" prefHeight="23.0"/>
        <RowConstraints maxHeight="497.0" minHeight="481.0" prefHeight="493.0"/>
    </rowConstraints>
    <children>
        <Pane GridPane.columnSpan="2"/>
        <Pane fx:id="insertedDiscPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1"/>
        <VBox style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <TextField fx:id="playerOneTextField" prefHeight="25.0" prefWidth="176.0" promptText="Player One">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0" top="35.0"/>
                    </VBox.margin>
                </TextField>
                <TextField fx:id="playerTwoTextField" promptText="Player Two">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0"/>
                    </VBox.margin>
                </TextField>
                <Button fx:id="setNamessButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="240.0"
                        text="Set Names">
                    <VBox.margin>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
                    </VBox.margin>
                </Button>
                <Label fx:id="PlayerNameLabel" alignment="CENTER" prefHeight="43.0" prefWidth="312.0" text="Player One"
                       textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="29.0"/>


                    </font>
                    <VBox.margin>
                        <Insets top="70.0"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="turnLabel" alignment="CENTER" prefHeight="43.0" prefWidth="318.0" text="Turn"
                       textFill="WHITE">
                    <font>
                        <Font size="29.0"/>
                    </font>
                </Label>
                <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
    </children>
</GridPane>
